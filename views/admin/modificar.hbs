<div class="CajaLogin">
    <div class="login">
        <h3>Nueva Novedad</h3>
        <form method="post" action="/admin/novedades/modificar" enctype="multipart/form-data">
            <input type="hidden" value="{{novedad.id_novedad}}" name="id">
            <div class="campo">
                <label for="name">Titulo </label>
                <input type="text" id="name" name="titulo" value="{{novedad.titulo}}" placeholder="Título" required="required"/>
            </div>
            <div class="campo">
                <label for="date">Fecha </label>
                <input type="date" id="date" name="fecha" value="{{fecha}}" required="required" />
            </div>
            <label>Contenido </label>
            <div class="campo">

                <textarea type="text" id="contenido" name="contenido"  required="required">{{novedad.contenido}}</textarea>
            </div>
            <label>Imagen: <input type="file" name="imagen" id="imagen"/></label>
            <label><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen actual?</label>
            <input type="hidden" name="img_original" value="{{novedad.img_id}}">


            <div class="boton">
                <input type="submit" value="modificar" class="btn-enviar" />
            </div>
        </form>
    </div>
</div>
